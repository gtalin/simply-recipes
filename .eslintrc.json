{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {

        "react/jsx-filename-extension": [
            "error",
            {
              "extensions": [
                  ".js",
                  ".jsx"
              ]
            }
          ],
          "react/prop-types": 0,
          "no-unused-vars": [
            "error",
            {
              "vars": "local",
              "args": "none"
            }
          ],
          "prettier/prettier": "error"
    }
}